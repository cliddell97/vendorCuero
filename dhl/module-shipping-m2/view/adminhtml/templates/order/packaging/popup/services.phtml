?>

<?php if ($services->count() > 0) : ?>
    <dl>
        <h3><?= __('DHL Shipping Services'); ?></h3>
        <div class="dhl-service-block-container">
            <?php foreach ($services as $service) : ?>
                <?php if ($output = $block->getServiceHtml($service)): ?>
                    <div class="dhl-service-block">
                        <h4><?= $block->escapeHtml(__($service->getName())) ?></h4>
                        <?= /* @noEscape */ $output ?>
                    </div>
                <?php endif; ?>
            <?php endforeach; ?>
        </div>
    </dl>
<?php endif; ?>
